#!/bin/sh

# sqlrclientwrapper-config provides various information about the
# sqlrclientwrapper libraries. Julien MOUTTE 17/04/2002

prefix=@prefix@
exec_prefix=@exec_prefix@
version=@SQLR_VERSION@

# fake out rpmlint
rp="rp"
ath="ath"

if ( test "@libdir@" = "/usr/lib" ); then
	sqlrclientwrapper_libs="-l@SQLR@clientwrapper -l@SQLR@client -lstdc++ "
	sqlrclientwrapper_libs_with_rpath="$sqlrclientwrapper_libs"
else
	sqlrclientwrapper_libs="-L@libdir@ -l@SQLR@clientwrapper -l@SQLR@client -lstdc++ "
	sqlrclientwrapper_libs_with_rpath="-Wl,-$rp$ath $sqlrclientwrapper_libs"
fi
sqlrclientwrapper_cflags="@FPIC@ -I@includedir@"

usage()
{
	cat <<EOF
Usage: @SQLR@clientwrapper-config [OPTIONS]
Options:
	[--prefix]
	[--exec-prefix]
	[--version]
	[--libs]
	[--with-$rp$ath]
	[--cflags]
EOF
	exit $1
}

if ( test "$#" -eq "0" ); then
	usage 1 1>&2
fi

while ( test "$#" -gt "0" ); do

	case "$1" in
		-*=*)
			optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'`
			;;
		*)
			optarg=
			;;
	esac

	case $1 in
		--prefix)
			echo_prefix=yes	
			;;
		--exec-prefix)
			echo_exec_prefix=yes
			;;
		--version)
			echo $version
			;;
		--cflags)
			echo_cflags=yes
			;;
		--libs)
			echo_libs=yes
			;;
		--with-$rp$ath)
			with_rpath=yes
			;;
		*)
			usage 1 1>&2
			;;
	esac
	shift
done

if ( test "$echo_prefix" = "yes" ); then
	echo $prefix
fi

if ( test "$echo_exec_prefix" = "yes" ); then
	echo $exec_prefix
fi

if ( test "$echo_cflags" = "yes" ); then
	echo $sqlrclientwrapper_cflags
fi

if ( test "$echo_libs" = "yes" ); then
	if ( test "$with_rpath" = "yes" ); then
		echo $sqlrclientwrapper_libs_with_rpath
	else
		echo $sqlrclientwrapper_libs
	fi
fi
