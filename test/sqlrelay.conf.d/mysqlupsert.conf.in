<?xml version="1.0"?>
<instances>

	<instance id="mysqltest" port="9000" socket="/tmp/test.socket" dbase="mysql" debug="triggers">
		<users>
			<user user="test" password="test"/>
		</users>
		<translations>
			<translation module="normalize"/>
		</translations>
		<triggers>
			<trigger module="upsert" when="after">
				<errors>
					<error number="1062"/>
				</errors>
				<tables>
					<table name="student">
						<primarykey name="id"/>
						<column name="firstname"/>
						<column name="lastname"/>
					</table>
				</tables>
			</trigger>
		</triggers>
		<connections>
			<connection string="host=mysql;user=testuser;password=testpassword;db=@HOSTNAME@;foundrows=yes"/>
		</connections>
	</instance>

</instances>
